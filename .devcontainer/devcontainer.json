{
	"name": "Imagine",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/aws-cli": {},
		"ghcr.io/devcontainers-contrib/features/terraform-docs:1": {},
		"ghcr.io/devcontainers-contrib/features/terraform-asdf:2": {},
		"ghcr.io/devcontainers-contrib/features/terraform-ls-asdf:2": {},
		"ghcr.io/devcontainers-contrib/features/tfsec:1": {},
		"ghcr.io/devcontainers/features/terraform": {},
		"ghcr.io/hspaans/devcontainer-features/ansible-lint": {},
		"ghcr.io/devcontainers-contrib/features/packer-asdf": {},
		"ghcr.io/devcontainers-contrib/features/pre-commit": {}
	},
	"postCreateCommand": "npm install && cd ./backend && pip install --upgrade pip && pip install -r requirements.txt -U",
	"customizations": {
		"vscode": {
			"extensions": [
				"bibhasdn.unique-lines",
				"DavidAnson.vscode-markdownlint",
				"donjayamanne.githistory",
				"github.vscode-github-actions",
				"GitHub.vscode-pull-request-github",
				"hashicorp.hcl",
				"hashicorp.terraform",
				"ms-python.debugpy",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"svelte.svelte-vscode",
				"AndrewButson.vscode-openai"
			]
		}
	}
}